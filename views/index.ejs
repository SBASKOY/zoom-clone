            <img src="images/share.svg" width="100" height="100">
            <p>Ekran Paylaş</p>
        </div>
    </div>
    </script>
    <div id="dialog" title="Create new user" style="display:none;">
        <input type="text" name="Adınız" id="name" class="text">

        <input type="text" id="roomId" placeholder="Oda Id">
        <button id="joinroom"> Katıl</button>

    </div>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        function newRoom() {
            var name = prompt("Adınız", "")
            if (name == null || name == "") {

            } else {
                location.href = "/room/" + name;
            }

        }
        $("#joinroom").on("click",()=>{
           var name=$('#name').val();
           var id=$('#roomId').val();
           if(name!=""|| name!=null && id!=""||id!=null){
               location.href="/"+id+"_"+name;
           }
        })
        function joinRoom() {
            $("#dialog").dialog()
        }
    </script>
